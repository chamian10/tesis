<%= semantic_form_for [:admin, @turn] do |f| %>

    <%= f.inputs "Editar" do %>
        <%= f.input :patient %>
        <%= f.input :date %>
        <%= f.input :time %>
        <%= f.input :name, :as => :select%>


    <% end %>

    <%= f.actions do %>
        <%= f.action :submit %>
        <li class="cancel">
          <%= link_to "Cancel", admin_turns_path %>
        </li>
    <% end %>
<% end %>