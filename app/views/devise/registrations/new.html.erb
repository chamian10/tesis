<div class="row-fluid text-center"></br>
  <div class="span12">
    <div class="row-fluid">
      <div class="offset4 span4 offset4 border"><h2>Registrarse</h2>



        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div><%= f.label :email, "Email" %>
              <br/>
              <%= f.email_field :email, :autofocus => true, placeholder: "Ingresá tu email" %></div>

            <div><%= f.label :password, "Contraseña" %>
              <br/>
              <%= f.password_field :password, placeholder: "Ingresá tu Contraseña" %></div>

            <div><%= f.label :password_confirmation, "Confirmar Contraseña" %>
              <br/>
              <%= f.password_field :password_confirmation, placeholder: "Re-Ingresá tu Contraseña" %></div>
            </br>

            <button type="submit" class="btn btn-success">Registrarse</button>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>

  </div>
</div>  </br></br>
